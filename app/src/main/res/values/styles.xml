<resources>

    <style name="TextField" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextField.Header5">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TextField.Subtitle1">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextField.Body1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextField.Body2">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextField.White" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/size_button_text</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="TextField.ListItem" />

    <style name="TextField.ListItem.PopularMovie">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginStart">@dimen/margin_popular_movie_text</item>
        <item name="android:layout_marginEnd">@dimen/margin_popular_movie_text</item>
        <item name="android:layout_marginTop">@dimen/margin_popular_movie_text</item>
    </style>

    <style name="TextField.ListItem.PopularMovie.Title">
        <item name="android:textAppearance">@style/TextField.Subtitle1</item>
    </style>

    <style name="TextField.ReleaseDate">
        <item name="android:drawablePadding">@dimen/padding_popular_movie_drawable</item>
        <item name="android:textColor">@color/tint_movie_item_date</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextField.Rating" parent="TextField.White">
        <item name="android:drawableStart">@drawable/ic_star</item>
        <item name="android:drawablePadding">@dimen/padding_popular_movie_drawable</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/padding_horizontal_chip</item>
        <item name="android:paddingEnd">@dimen/padding_horizontal_chip</item>
        <item name="android:paddingTop">@dimen/padding_vertical_chip</item>
        <item name="android:paddingBottom">@dimen/padding_vertical_chip</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextField.MovieDetail">
        <item name="android:layout_marginStart">@dimen/margin_xxl</item>
        <item name="android:layout_marginEnd">@dimen/margin_xxl</item>
    </style>

    <style name="TextField.MovieDetail.Title">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:textAppearance">@style/TextField.Header5</item>
    </style>

    <style name="TextField.MovieDetail.Genre">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:textAppearance">@style/TextField.Body2</item>
    </style>

    <style name="TextField.MovieDetail.Time">
        <item name="android:textAppearance">@style/TextField.Body2</item>
        <item name="android:textColor">@color/tint_movie_item_date</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
    </style>

    <style name="TextField.MovieDetail.Overview">
        <item name="android:textAppearance">@style/TextField.Body1</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:lineSpacingExtra">7sp</item>
    </style>

    <style name="TextField.MovieDetail.PersonTitle">
        <item name="android:textAppearance">@style/TextField.Body1</item>
        <item name="android:layout_marginTop">28dp</item>
    </style>

</resources>
